{
  "name": "{{projectName}}-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "linkLib": "pnpm link @michalrakus/x-nest-server-lib",
    "buildAndPackLib": "pnpm --prefix ../../chilibase/backend run buildAndPack",
    "installLib": "pnpm install ../../chilibase/backend/chilibase-backend-0.1.1.tgz",
    "cs": "pnpm run copy-common && pnpm run start",
    "bl": "pnpm run buildAndPackLib && pnpm run installLib",
    "sl": "pnpm run bl && pnpm run cs",
    "copy-common": "pnpm dlx shx rm -rf src/common && pnpm dlx shx cp -r ../frontend/src/common ./src/common",
    "preinstall": "npx only-allow pnpm"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@chilibase/backend": "0.1.1",
    "@nestjs/common": "^11.0.20",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.20",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.20",
    "@nestjs/typeorm": "^11.0.0",
    "angular-expressions": "^1.4.3",
    "docxtemplater": "^3.61.1",
    "exceljs": "^4.4.0",
    "jwks-rsa": "^3.2.0",
    "line-reader": "^0.4.0",
    "lodash": "^4.17.21",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.14.1",
    "pg-connection-string": "^2.9.1",
    "pg-query-stream": "^4.8.1",
    "pizzip": "^3.1.8",
    "postgres-interval": "^4.0.2",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.22"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.6",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.0.20",
    "@types/jest": "29.5.14",
    "@types/lodash": "^4.17.16",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.14.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "8.43.0",
    "@typescript-eslint/parser": "8.43.0",
    "eslint": "9.35.0",
    "eslint-plugin-import": "^2.32.0",
    "jest": "29.7.0",
    "prettier": "^3.5.3",
    "supertest": "^7.1.0",
    "ts-jest": "29.3.2",
    "ts-node": "10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
